<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/title_asc_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Ascending"
            android:textSize="22dp"/>

        <RadioButton
            android:layout_marginTop="20dp"
            android:id="@+id/title_desc_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Descending"
            android:textSize="22dp"/>

        <RadioButton
            android:id="@+id/created_asc_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created On Ascending"
            android:layout_marginTop="20dp"
            android:textSize="22dp"/>

        <RadioButton
            android:layout_marginTop="20dp"
            android:id="@+id/created_desc_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created On Descending"
            android:textSize="22dp"/>

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>