<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notes_list_image"
        android:layout_width="40dp"
        android:layout_height="53dp"

        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/notes_title_tv"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/notes_title_tv"
        android:layout_width="181dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="title"
        app:layout_constraintEnd_toStartOf="@+id/notes_edit_btn"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/notes_desc_tv"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="title"
        app:layout_constraintStart_toStartOf="@+id/notes_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/notes_title_tv"></TextView>

    <Button
        android:id="@+id/notes_edit_btn"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notes_delete_btn"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/notes_delete_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>